@model IEnumerable<VillaNumberDTO>
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number list</h1>
        </div>
        <div class="col text-end">
            <a asp-asp-controller="VillaNumber" asp-action="CreateNumberVilla" class="btn btn-outline-primary"><i class="bi bi-file-plus"></i>Create New Villa Number</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaNo</td>
                    <td>
                        <a asp-asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-villaId="@item.VillaID" class="btn btn-success">
                            <i class="bi bi-pen"></i>Update New Villa
                        </a>
                        <a asp-asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-villaId="@item.VillaID" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>Delete New Villa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
